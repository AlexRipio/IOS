
// Ejercicio 1

var altura = 3
var base = 2
var area = base * altura
var perimetro = 2 * base + 2 * altura

print("Perimetro: ", perimetro)
print("Area: ", area)


// Ejercicio 2

var cateto1 : Double = 4
var cateto2 : Double = 8
var hipotenusa : Double = sqrt(pow(cateto1, 2) + pow(cateto2, 2))
print("Hipotenusa: ", hipotenusa)


